{
    "name" : "simtb3_sim",
    "image": "ros:iron-ros-base-jammy",
    "runArgs": [
        "--name",
        "simtb3_sim",
        "-e",
        "DISPLAY=host.docker.internal:0.0",
        "-it",
        "--net=host",
        "--gpus",
        "all",
        "--privileged",
        "-v",
        "/tmp/.X11-unix:/tmp/.X11-unix",
        "-v",
        "/dev:/dev"
    ],

    "customizations": {
        "settings": {
            "terminal.integrated.shell.linux": "/bin/bash",
            "python.pythonPath": "/usr/bin/python3"
        },
        "vscode": {
            "extensions": [
                "ms-python.python", 
                "ms-toolsai.jupyter"
            ]
        }
    }
}